<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.booking_detail.BookingDetail">
    <LinearLayout
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/bar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="bold"

        />
    </LinearLayout>
    <LinearLayout
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imagePlace"
                android:src="@color/colorAccent"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tanggalBook"
                    tools:ignore="InvalidImeActionId"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:editable="false"
                    android:clickable="true"
                    android:text=""
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/textshape"
                    android:drawableLeft="@drawable/calendar"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:imeActionId="@+id/date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="19dp"
                    android:singleLine="true" />
            <TextView

                    android:id="@+id/timeBook"
                    tools:ignore="InvalidImeActionId"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/textshape"
                    android:drawableLeft="@drawable/clock"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:editable="false"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:imeActionId="@+id/date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:padding="19dp"
                    android:singleLine="true" />
            <TextView
                    android:id="@+id/priceBook"
                    tools:ignore="InvalidImeActionId"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/textshape"
                    android:drawableLeft="@drawable/dollar"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:editable="false"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:imeActionId="@+id/date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:padding="19dp"
                    android:singleLine="true"/>
            <TextView

                    android:id="@+id/statusBook"
                    tools:ignore="InvalidImeActionId"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textshape"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:editable="false"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:imeActionId="@+id/date"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:padding="19dp"
                    android:singleLine="true" />


        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right|bottom"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="30dp"
        >

            <Button
                    android:id="@+id/buttonUploadFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonshape"
                    android:gravity="center"
                    android:text="Pilih Foto Bukti Pembayaran "
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right|bottom"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="30dp"
        >

            <Button
                    android:id="@+id/buttonCofrim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonshape"
                    android:gravity="center"
                    android:text="Konfirmasi Pembayaran"
                    android:textAllCaps="false"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>